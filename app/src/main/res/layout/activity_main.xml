<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@android:color/darker_gray"
        android:text="Welcome to Bakery On The Go!"
        android:textSize="25sp"
        android:fontFamily="sans-serif-light"
        android:textColor="@android:color/black" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:src="@drawable/bakeryonthego"
        android:scaleType="centerCrop" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Snug take-out coffee joint inside Bathurst subway station, with donuts and Jamaican patties."
        android:textSize="20sp"
        android:background="@android:color/darker_gray"
        android:fontFamily="sans-serif-light"
        android:textColor="@android:color/black"
        android:padding="15dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Address: 819 Bathurst St, Toronto, ON M5R 3G2\n\nHours: Everyday 7a.m.â€“ 8p.m.\n\nPhone: (416) 532-7795"
        android:textSize="15sp"
        android:fontFamily="sans-serif-light"
        android:background="@android:color/darker_gray"
        android:textColor="@android:color/black"
        android:padding="15dp"/>

</LinearLayout>